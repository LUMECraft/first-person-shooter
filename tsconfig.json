{
	"extends": "./node_modules/@lume/cli/config/ts.config.json",
	"compilerOptions": {
		"checkJs": true,
		// "declaration": false,
		"rootDir": "./",
		"jsxImportSource": "@lume/element",
		"jsx": "preserve",
		"experimentalDecorators": true
	},

	"include": [
		"client/**/*.js",
		"client/**/*.ts",
		"client/**/*.tsx",
		"server/**/*.js",
		"server/**/*.ts",
		"server/**/*.tsx",
		"imports/**/*.js",
		"imports/**/*.ts",
		"imports/**/*.tsx"
	]
}
